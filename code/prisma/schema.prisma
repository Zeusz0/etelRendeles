generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model felhasznalo{
  id Int @id @default(autoincrement())
  vezetek_nev String
  kereszt_nev String
  telefonszam String
  cim String
  szamlazasi_cim String
  email String?   @unique
  partner Boolean @default(false)
  admin Boolean @default(false)
}

model Session {
  id           String   @id @default(cuid())
  userId       Int
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         felhasznalo     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model menu {
  id    Int     @id @default(autoincrement())
  kategoriak String
}

model aru {
  id    Int     @id @default(autoincrement())
  partner_id Int
  nev String
  leiras  String
  ar  Int
  kep String?
}

model rendeles {
  id    Int     @id @default(autoincrement())
  termekek String
  kisszalitasi_dij  Int
  borravalo  Int
  aruosszeg  Int
  osszeg  Int
}
